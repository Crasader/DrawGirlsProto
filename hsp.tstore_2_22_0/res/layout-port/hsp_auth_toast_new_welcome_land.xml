<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:tag="hsp.welcome.main" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/hsp_auth_toast_new_background_land"
        android:tag="hsp.auth.welcome.bg" />

    <RelativeLayout
        android:id="@+id/hsp.toast.auth.welcome.btn.area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toast.logo"
        android:paddingLeft="84dp"
        android:paddingRight="84dp"
        android:gravity="center_horizontal"
        android:tag = "hsp.auth.welcome.btn.area"
        >
		    
		    <!-- 		        guest -->
			        	<RelativeLayout
				    	    android:id="@+id/welcome.guestbtn"
				    	    android:layout_width="92dp"
				    	     android:layout_height="27dp"
				    	     android:layout_weight="1"
				    	     android:clickable="true"
				    	     android:layout_centerHorizontal="true"
				    	     android:gravity="center"
				    	    android:background="@drawable/hsp_auth_toast_new_guest_button"
				    	    android:tag="hsp.auth.welcome.toast.guest.login.btn"
				    	    >
			    	
			    	    	<LinearLayout
			    	    	    android:layout_width="fill_parent"
					            android:layout_height="wrap_content"
					            android:addStatesFromChildren="true"
					            android:gravity="center"
					            android:orientation="vertical"
			    	    	    >
			    	    	    
			    	            <TextView
			    	                	android:id="@+id/device.description"
							            android:layout_width="fill_parent"
							            android:layout_height="wrap_content"
							            android:gravity="center"
			    	            		android:text="Guest Login"
							            android:textColor="@color/hsp.common.white"
							            android:textStyle="bold"
							            android:textSize="12dp"
							            android:tag="hsp.auth.welcome.guest.login.textview"
							            />
			    	    	</LinearLayout>
	    	    
	    			</RelativeLayout>
		    
		    <LinearLayout
		        android:id="@+id/welcome.btn"
		        android:layout_width="fill_parent"
		        android:layout_height="50.5dp"
		        android:layout_marginTop="14dp"
		        android:layout_below="@+id/welcome.guestbtn"
		        android:gravity="center"
		        >

<!-- 		            logout button -->
		            <LinearLayout
		                android:id="@+id/hsp.auth.welcome.device.login.layout"
		                android:layout_width="fill_parent"
		                android:layout_height="36.67dp"
		                android:layout_marginLeft="20dp"
		                android:layout_marginRight="20dp"
		                android:layout_weight="1"
		                android:background="@drawable/hsp_common_bt_orange"
		                android:gravity="center"
		                android:orientation="horizontal"
		                android:padding="0dp"
		                android:tag="hsp.auth.welcome.device.login.layout"
		                 android:visibility="gone"
		                 >
		
		                <TextView
		                    android:id="@+id/hsp.auth.welcome.device.login.with.id.textview"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="6.67dp"
		                    android:clickable="true"
		                    android:ellipsize="end"
		                    android:gravity="center_horizontal|right"
		                    android:padding="0dp"
		                    android:singleLine="true"
		                    android:tag="hsp.auth.welcome.device.login.with.id.textview"
		                    android:textColor="@color/hsp.common.white"
		                    android:textSize="12dp" />
		
		                <TextView
		                    android:id="@+id/hsp.auth.welcome.device.login.with.id.description.textview"
		                    android:layout_width="100dp"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="6.67dp"
		                    android:clickable="true"
		                    android:padding="0dp"
		                    android:tag="hsp.auth.welcome.device.login.with.id.description.textview"
		                    android:text="@string/hsp.toastnew.auth.login.hid.alert.other.id.login"
		                    android:textColor="@color/hsp.common.white"
		                    android:textSize="12dp" />
		            </LinearLayout>
		
<!-- 		            email login -->
		            <LinearLayout
					    android:layout_width="163dp"
		    	     	android:layout_height="fill_parent"
		    	     	android:layout_weight="1"
		    	     	android:layout_marginRight="5dp"
		    	     	android:gravity="center"
		    	     	android:clickable="true"
		    	     	android:addStatesFromChildren="true"
		    	     	android:background="@drawable/hsp_auth_toast_new_red_button"
		    	     	android:orientation="vertical"
		    	     	android:tag="hsp.auth.welcome.toast.payco.login.btn"
					    >
					    <TextView 
					        android:id = "@+id/email_title"
					        android:layout_width="wrap_content"
		    	     		android:layout_height="wrap_content"
		    	     		android:textStyle="bold"
		    	     		android:shadowDy="1"
		    	     		android:gravity="center"
		    	     		android:shadowColor="#4d000000"
		    	     		android:textColor="@color/hsp.common.white"
		    	     		android:textSize="15dp"
		    	     		android:includeFontPadding="false"
		    	     		android:text="@string/hsp.toastnew.auth.welcome.alert.hid.email.login.title"
					        />
					    
					    <TextView 
					        android:layout_width="wrap_content"
		    	     		android:layout_height="wrap_content"
		    	     		android:layout_below="@+id/email_title"
		    	     		android:textStyle="bold"
		    	     		android:shadowDy="1"
		    	     		android:shadowColor="#4d000000"
		    	     		android:textColor="@color/hsp.common.white"
		    	     		android:gravity="center"
		    	     		android:textSize="10dp"
		    	     		android:includeFontPadding="false"
		    	     		android:text="@string/hsp.toastnew.auth.welcome.alert.hid.email.login"
					        />
					</LinearLayout>
			
<!-- 		            faceboo login -->
		            <LinearLayout
		                	android:id="@+id/hsp.auth.welcome.hangame.login.textview"
						    android:layout_width="163dp"
			    	     	android:layout_height="fill_parent"
			    	     	android:layout_weight="1"
			    	     	android:gravity="center"
			    	     	android:clickable="true"
			    	     	android:addStatesFromChildren="true"
			    	     	android:background="@drawable/hsp_auth_toast_new_blue_button"
			    	     	android:orientation="vertical"
			    	     	android:tag="hsp.auth.welcome.toast.facebook.login.btn"
						    >
						    					    <TextView 
					        android:id = "@+id/idp_title"
					        android:layout_width="wrap_content"
		    	     		android:layout_height="wrap_content"
		    	     		android:textStyle="bold"
		    	     		android:shadowDy="1"
		    	     		android:gravity="center"
		    	     		android:shadowColor="#4d000000"
		    	     		android:textColor="@color/hsp.common.white"
		    	     		android:textSize="15dp"
		    	     		android:includeFontPadding="false"
		    	     		android:text="@string/hsp.toastnew.auth.welcome.alert.hid.facebook.login.title"
					        />
						    					    
						</LinearLayout>

		        </LinearLayout>
		        
		        	<RelativeLayout
			    	     	android:id="@+id/welcome.description"
			    	  		android:layout_below="@+id/welcome.btn"
			    	  		android:layout_marginTop="18dp"
			    	    	android:layout_width="fill_parent"
			    	    	android:layout_height="wrap_content"
			    	    >
			    	    <TextView
			    	        android:layout_width="fill_parent"
			    	     	android:layout_height="wrap_content"
			    	     	android:gravity="center"
			    	     	android:textColor="#B3ffffff"
			    	     	android:alpha="70"
			    	     	android:textSize="11dp"
			    	     	android:textStyle="bold"
			    	     	android:shadowDy="1.0"
			    	     	android:shadowColor="#4D000000"
			    	     	android:tag="hsp.toast.auth.welcome.playguide.description"
			    	     	android:text="@string/hsp.toastnew.auth.welcome.alert.hid.description"
			    	        />
			    	    
			    	</RelativeLayout>
			    	
        </RelativeLayout>
			    	<ImageView 
			    	    android:id="@+id/toast.logo"
			    	    android:layout_width="95dp"
			    	    android:layout_height="23dp"
			    	    android:layout_marginTop="20dp"
			    	    android:layout_marginBottom="14dp"
			    	    android:layout_centerInParent="true"
			    	    android:layout_alignParentBottom="true"
			    	    android:src="@drawable/hsp_auth_toast_new_welcome_footer"
			    	    />
    
</RelativeLayout>