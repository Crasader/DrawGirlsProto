<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hsp.ranking.detail.row"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/hsp.common.white"
        android:tag="hsp.ranking.detail.row" >

        <!-- 사용자 사진 -->

        <ImageView
            android:id="@+id/hsp.ranking.detail.row.photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hsp_toast_new_cmpr_header_dft"
            android:tag="hsp.ranking.detail.row.photo" />

        <!-- 랭킹 -->

        <TextView
            android:id="@+id/hsp.ranking.detail.row.text.ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10.3dp"
            android:layout_toRightOf="@id/hsp.ranking.detail.row.photo"
            android:tag="hsp.ranking.detail.row.text.ranking"
            android:textColor="@color/hsp.common.black"
            android:textSize="16.6dp" />

        <!-- 별명 -->

        <TextView
            android:id="@+id/hsp.ranking.detail.row.text.nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10.3dp"
            android:layout_toRightOf="@id/hsp.ranking.detail.row.text.ranking"
            android:ellipsize="end"
            android:singleLine="true"
            android:tag="hsp.ranking.detail.row.text.nickname"
            android:textColor="@color/hsp.common.black"
            android:textSize="16.6dp" />

        <!-- 점수 -->

        <TextView
            android:id="@+id/hsp.ranking.detail.row.text.score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hsp.ranking.detail.row.text.nickname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hsp.ranking.detail.row.photo"
            android:tag="hsp.ranking.detail.row.text.score"
            android:textColor="#666666"
            android:textSize="13.3dp" />

        <!-- 사용자 정보이동 버튼 -->

        <ImageView
            android:id="@+id/hsp.ranking.detail.row.button.arrow"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/hsp_common_arrow"
            android:tag="hsp.ranking.detail.row.button.arrow" />
    </RelativeLayout>

</LinearLayout>