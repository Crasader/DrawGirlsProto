<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/hsp.common.white"
    android:orientation="vertical" >

    <!-- 더보기 버튼 -->
    
    <LinearLayout 
	    android:id="@+id/hsp.toast.social.list.footer.button"
	    android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="13.33dp"
        android:layout_marginLeft="13.33dp"
        android:layout_marginRight="13.33dp"
        android:layout_marginTop="13.33dp"
        android:gravity="center"
        android:textColor="#66686d"
        android:textSize="16dp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="@drawable/hsp_toast_new_btn_more"
        android:tag="hsp.toast.common.list.footer.button.more" 
	    >
	    
				<TextView
				    android:id="@+id/hsp.toast.social.list.footer.button.text"
				    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/hsp.toast.new.gnb.toast.more"
			        android:textColor="#66686d"
			        android:textSize="16dp"
			        android:textStyle="bold"
			        android:tag="hsp.toast.social.list.footer.button.text" 
				    />
				
				<ImageView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="3.33dp"
				    android:src="@drawable/hsp_toast_new_btn_more_arrow"
				    />
				
	</LinearLayout>
	
</LinearLayout>